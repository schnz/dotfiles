// Place your key bindings in this file to overwrite the defaults
[
    {
        "mac": "cmd+shift+l",
        "win": "ctrl+shift+l",
        "linux": "ctrl+shift+l",
        "key": "ctrl+shift+l",
        "command": "editor.action.insertCursorAtEndOfEachLineSelected",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.files.openFolder"
    },
    {
        "key": "ctrl+k ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+k ctrl+w",
        "command": "editor.action.toggleRenderWhitespace"
    },
    {
        "key": "ctrl+k ctrl+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "ctrl+k ctrl+o",
        "command": "editor.action.toggleMinimap"
    },
    {
        "key": "ctrl+k ctrl+m",
        "command": "workbench.action.toggleMenuBar"
    },
    {
        "key": "ctrl+shift+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "shift+f11",
        "command": "workbench.action.toggleZenMode",
        "when": "!inDebugMode"
    },
    {
        "key": "ctrl+e",
        "command": "emmet.expandAbbreviation"
    },
    {
        "key": "ctrl+k ctrl+l",
        "command": "workbench.action.editor.changeLanguageMode"
    },
    {
        "key": "f5",
        "command": "workbench.files.action.refreshFilesExplorer",
        "when": "!inDebugMode"
    },
    {
        "key": "f9",
        "command": "editor.action.sortLinesAscending"
    },
    {
        "key": "ctrl+.",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "alt+shift+numpad_add",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "alt+shift+numpad_subtract",
        "command": "workbench.action.closeEditorsInGroup"
    },
    {
        "key": "shift+alt+numpad_multiply",
        "command": "workbench.action.toggleEditorGroupLayout"
    },
    {
        "key": "ctrl+7",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+7",
        "command": "editor.action.blockComment",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+p",
        "command": "extension.search",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+k ctrl+z",
        "command": "toggle",
        "when": "editorTextFocus",
        "args": {
            "id": "zen",
            "value": [
                {
                    "workbench.activityBar.location": "hidden",
                    "workbench.statusBar.visible": false,
                    "editor.hideCursorInOverviewRuler": true,
                    "editor.scrollbar.vertical": "hidden",
                    "breadcrumbs.enabled": false,
                    "editor.guides.indentation": false,
                    "editor.renderLineHighlight": "none",
                    "editor.glyphMargin": false,
                    // "editor.lineNumbers": "off",
                    "editor.showFoldingControls": "never",
                    "workbench.layoutControl.enabled": false,
                    "window.title": " ",
                },
                {
                    "workbench.activityBar.location": "side",
                    "workbench.statusBar.visible": true,
                    "editor.hideCursorInOverviewRuler": false,
                    "editor.scrollbar.vertical": "auto",
                    "breadcrumbs.enabled": true,
                    "editor.guides.indentation": true,
                    "editor.renderLineHighlight": "line",
                    "editor.glyphMargin": true,
                    // "editor.lineNumbers": "on",
                    "editor.showFoldingControls": "mouseover",
                    "workbench.layoutControl.enabled": true,
                    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",
                }
            ]
        }
    },
]
